<Window x:Class="SklepInternetowyWPF.Views.AdminPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel administratora" Height="300" Width="400"
        Background="#EDF4FF">
    <StackPanel Margin="20">
        <TextBlock Text="Panel administratora"
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,10" Foreground="#1B1C2E"/>
        <Button Content="Dodaj produkt" Click="AddProduct_Click" Height="30" Margin="0,5"/>
        <Button Content="Edytuj produkt" Click="EditProduct_Click" Height="30" Margin="0,5"/>
        <Button Content="Usuń produkt" Click="DeleteProduct_Click" Height="30" Margin="0,5"/>
        <Button Content="Statystyki" Click="StatsButton_Click" Height="30" Margin="0,5"/>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <TextBox x:Name="NewCategoryTextBox" Width="200" Height="30" Margin="0,0,10,0"/>
            <Button Content="Dodaj kategorię" Click="AddCategory_Click" Width="120" Height="30"/>
        </StackPanel>
    </StackPanel>
</Window>
