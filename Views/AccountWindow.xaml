<Window x:Class="SklepInternetowyWPF.Views.AccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Konto użytkownika" Height="300" Width="400"
        Loaded="Window_Loaded"
        Background="#EDF4FF">

    <Window.Resources>
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.5"/>
        </Storyboard>
    </Window.Resources>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="20">

        <TextBlock x:Name="WelcomeText"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#1B1C2E"
                   />

        <Button Content="Historia zamówień"
                Click="History_Click"
                Background="#90C4E4"
                Foreground="#1B1C2E"
                Margin="0,5"
                Width="120"
                Height="30"/>

        <Button Content="Wyloguj się"
                Click="Logout_Click"
                Background="#7A5DAD"
                Foreground="White"
                Margin="0,5"
                Width="120"
                Height="30"/>

        <Button Content="Zamknij"
                Click="Close_Click"
                Background="#C9B6E4"
                Foreground="#1B1C2E"
                Margin="0,5"
                Width="120"
                Height="30"/>
    </StackPanel>
</Window>
