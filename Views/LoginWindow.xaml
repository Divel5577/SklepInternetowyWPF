<Window x:Class="SklepInternetowyWPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logowanie" Height="250" Width="350" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="30" VerticalAlignment="Center">
        <TextBlock Text="Nazwa użytkownika:" Margin="0,0,0,5"/>
        <TextBox x:Name="UsernameBox" Margin="0,0,0,10"/>

        <TextBlock Text="Hasło:" Margin="0,0,0,5"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20"/>

        <Button Content="Zaloguj" Width="100" HorizontalAlignment="Center" Click="Login_Click"/>
        <TextBlock x:Name="ErrorText" Foreground="Red" Margin="0,10,0,0" TextAlignment="Center"/>
    </StackPanel>
</Window>
