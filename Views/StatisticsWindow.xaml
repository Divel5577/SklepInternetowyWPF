<Window x:Class="SklepInternetowyWPF.Views.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Statystyki sprzedaży" Height="400" Width="500"
        Loaded="Window_Loaded"
        Background="#EDF4FF">

    <Window.Resources>
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.5"/>
        </Storyboard>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Najczęściej kupowane produkty"
                   FontWeight="Bold"
                   FontSize="16"
                   Margin="0,0,0,10"
                   Foreground="#1B1C2E"/>

        <ListView x:Name="StatsListView"
                  Grid.Row="1"
                  Margin="0,10,0,0"
                  Background="White"
                  BorderBrush="#9AD4D6"
                  BorderThickness="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Produkt"
                                    DisplayMemberBinding="{Binding ProductName}"
                                    Width="250"/>
                    <GridViewColumn Header="Suma sprzedanych"
                                    DisplayMemberBinding="{Binding TotalQuantitySold}"
                                    Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Content="Drukuj"
                Grid.Row="2"
                Width="80" Height="30" Margin="0,10,0,0"
                HorizontalAlignment="Right"
                Click="Print_Click"
                Background="#90C4E4" Foreground="#1B1C2E"/>
    </Grid>
</Window>
