<Window x:Class="SklepInternetowyWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sklep Internetowy" Height="600" Width="900">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="LightGray" Height="50">
            <Button Content="Strona główna" Margin="10"/>
            <Button Content="Koszyk" Margin="10"/>
            <Button Content="Historia" Margin="10"/>
            <Button Content="Konto" Margin="10"/>
        </StackPanel>

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                <TextBox x:Name="SearchBox" Width="200" Margin="5" Text=""/>
                <ComboBox x:Name="CategoryFilterBox"
                          Width="150" Margin="5"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"/>
                <Button Content="Szukaj" Margin="5" Click="Search_Click"/>
                <Button Content="Dodaj produkt" Width="120" Margin="5" Click="AddProduct_Click"/>
                <Button Content="Edytuj produkt" Width="120" Margin="5" Click="EditProduct_Click"/>
                <Button Content="Usuń produkt" Width="120" Margin="5" Click="DeleteProduct_Click"/>
            </StackPanel>

            <ListView x:Name="ProductList" Grid.Row="1" Margin="5" ItemsSource="{Binding Products}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="200">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="{Binding NameHeader}" Click="SortByName_Click"/>
                            </GridViewColumn.Header>
                            <GridViewColumn.DisplayMemberBinding>
                                <Binding Path="Name"/>
                            </GridViewColumn.DisplayMemberBinding>
                        </GridViewColumn>

                        <GridViewColumn Header="Opis" Width="300" DisplayMemberBinding="{Binding Description}"/>

                        <GridViewColumn Width="100">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Content="{Binding PriceHeader}" Click="SortByPrice_Click"/>
                            </GridViewColumn.Header>
                            <GridViewColumn.DisplayMemberBinding>
                                <Binding Path="Price"/>
                            </GridViewColumn.DisplayMemberBinding>
                        </GridViewColumn>

                        <GridViewColumn Header="Kategoria" Width="150" DisplayMemberBinding="{Binding CategoryName}"/>
                    </GridView>
                </ListView.View>
            </ListView>

        </Grid>
    </DockPanel>
</Window>
